@model AdmibolsilloN.Models.Usuario;

@{
    ViewData["Title"] = "Dashboard del Cliente";
}
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard Cliente</title>
    <link rel="stylesheet" href="css/styleCliente.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../Iconos/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.2/css/dataTables.dataTables.css">
</head>

<body>
    <div class="container-fluid">
        <form action="../controladores/registrarUsucontro" method="post">
            <div class="row1">
                <div class="col">
                    <nav class="navbar navbar-expand-lg">
                        <img class="navbar-brand" src="../img/logFinal2.png">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item"><a class="nav-link" href="../rolCliente/dashboardCliente"><i class="fa-solid fa-house"></i></a></li>
                                <li class="nav-item"><a class="nav-link" href="#"><i class="fa-solid fa-bell"></i></a></li>
                                <li class="nav-item"><a class="nav-link" href="../ingresar"><i class="fa-solid fa-right-from-bracket"></i></a></li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </form>
    </div>

    
            
            <h3>Ingresos y Gastos</h3>
            <ul class="navbar-nav">
            <a asp-action="Auth" asp-controller="Register">Registrar Ingreso</a>
                <a asp-action="Auth" asp-controller="Register">Consultar Ingresos</a>
                <a asp-action="Auth" asp-controller="Register">Registrar Gasto</a>
        <a asp-action="Auth" asp-controller="Register">Consultar Gastos</a>
            </ul>

            <h3>Plan de Ahorro</h3>
            <ul class="navbar-nav">
        <a asp-action="Auth" asp-controller="Register">Registrar plan de Ahorro</a>
        <a asp-action="Auth" asp-controller="Register">Consultar plan de Ahorro</a>
            </ul>

            <h3>Tips</h3>
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="consultarTip">Consultar Tips</a></li>
            </ul>
        </div>

        <div class="col-md-9">
            <div class="row pt-3">
                <div class="col-md-4 col-sm-2 text-center">
                    <div class="card bg-dark-subtle border-0" style="width: 12rem;">
                        <div class="card-body">
                            <div class="card-title fs-1">
                                <i class="fa-solid fa-wallet"></i>
                            </div>
                            <div class="card-text fs-3"></div>
                            <p class="Caesar">Gastos Registrados</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-2 text-center">
                    <div class="card bg-dark-subtle border-0" style="width: 12rem;">
                        <div class="card-body">
                            <div class="card-title fs-1">
                                <i class="fa-solid fa-money-bill-trend-up"></i>
                            </div>
                            <div class="card-text fs-3"></div>
                            <p class="Caesar">Ingresos Registrados</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-sm-2 text-center">
                    <div class="card bg-dark-subtle border-0" style="width: 12rem;">
                        <div class="card-body">
                            <div class="card-title fs-1">
                                <i class="fa-solid fa-piggy-bank"></i>
                            </div>
                            <div class="card-text fs-3"></div>
                            <p class="Caesar">Plan de ahorro</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row pt-5 pb-5 justify-content-around">
                <div class="col-md-5 border shadow-sm p-3 mb-5 bg-body-tertiary rounded">
                    <h3 class="mb-3 pb-3 pt-3">Relación Ingresos-Gastos</h3>
                    <div>
                        <canvas id="myChart"></canvas>
                    </div>
                </div>

                <div class="col-md-5 border shadow-sm p-3 mb-5 bg-body-tertiary rounded">
                    <h3 class="mb-3 pb-3 pt-3">Servicios más solicitados</h3>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Servicio</th>
                                <th scope="col">Porcentaje</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Plan de Ahorro</td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" style="width: 60%;">60%</div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td>Gestión de Ingresos y Gastos</td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-info text-dark" style="width: 80%;">80%</div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">3</th>
                                <td>Tips financieros</td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-warning text-dark" style="width: 50%;">50%</div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('myChart');
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Enero', 'Febrero', 'Marzo', 'Abril'],
                datasets: [
                    {
                        label: 'Ingresos',
                        data: [2000000, 1700000, 2500000, 1500000],
                        borderWidth: 1,
                        backgroundColor: '#36a2eb'
                    },
                    {
                        label: 'Gastos',
                        data: [1800000, 1900000, 1500000, 1450000],
                        borderWidth: 1,
                        backgroundColor: '#FF6384'
                    }
                ]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</body>

</html>

