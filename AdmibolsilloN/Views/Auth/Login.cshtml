@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>::Iniciar Sesión::</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/ingresar.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/4b11e3acfb.js" crossorigin="anonymous"></script>
</head>

<body>
    <header>
        <nav>
            <a href="@Url.Action("Index", "Home")">Inicio</a>
            <a href="@Url.Action("AcercaDe", "Home")">Acerca de</a>
            <a href="@Url.Action("Servicios", "Home")">Servicios</a>
            <a href="@Url.Action("Login", "Account")">Iniciar Sesión</a>
            <a asp-action="Auth" asp-controller="Register">Registrarse</a>
            <a href="#contacto">Contacto</a>
        </nav>

        <section class="textoHeader">
            <h1> Admibolsillo </h1>
        </section>

        <div class="wave" style="height: 150px; overflow: hidden;">
            <svg viewBox="0 0 500 150" preserveAspectRatio="none" style="height: 100%; width: 100%;">
                <path d="M0.00,49.98 C150.00,150.00 349.20,-50.00 500.00,49.98 L500.00,150.00 L0.00,150.00 Z"
                      style="stroke: none; fill: white;"></path>
            </svg>
        </div>

    </header>

    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card">
                <div class="d-flex justify-content-center">
                    <img src="~/img/logoNuevo2.jpg" class="card-img-top img-fluid" alt="Admibolsillo">
                </div>
                
                <div class="card-body">
                    <form asp-action="Login" method="post">
                    
                        <div class="mb-3">
                            <label for="correo" class="form-label">Correo</label>
                            <input type="email" name="correo" required />
                        </div>
                        <div class="mb-3">
                            <label for="contrasena" class="form-label">Contraseña</label>
                            <input type="password" name="contrasena" required />
                        </div>
                        <div>
                            <a asp-action="Auth" asp-controller="Register">Registrarse</a>
                        </div>
                        <button type="submit" class="btn btn-info col-12 mt-5 mb-3" id="btnAlerta">Ingresar</button>
                    
                    </form>

                </div>
            </div>
        </div>
    </div>

    <footer class="footer" id="contacto">
        <div class="grupo-1">
            <div class="box">
                <figure>
                    <a href="#">
                        <img src="~/img/logoNuevo2.jpg" alt="Logo Admibolsillo" title="Admibolsillo" width="200px" height="180px">
                    </a>
                </figure>
            </div>
            <div class="box">
                <h2>Gaes 2</h2>
                <p>
                    <br>Karen Briñez
                    <br> Harry Díaz
                    <br> Katherin Gutierrez
                    <br> Julián Ramirez
                    <br> SENA
                    <br> Fase III
                </p>
            </div>

            <div class="box">
                <h2>Siguenos</h2>
                <div class="footerRedes">
                    <a href="#" class="fa fa-facebook"></a>
                    <a href="#" class="fa fa-instagram"></a>
                    <a href="#" class="fa fa-twitter"></a>
                    <a href="#" class="fa fa-youtube"></a>
                </div>
            </div>
        </div>
        <div class="grupo-2">
            <small>&copy; 2024 <b>SLee Dw</b>- Todos los derechos reservados.</small>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>

</html>



