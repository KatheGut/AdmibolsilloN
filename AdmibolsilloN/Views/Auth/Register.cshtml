@model Admibolsillo.Models.ViewModels.RegistroViewModel
@{
    ViewData["Title"] = "Registro";
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrarse</title>
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/Registrarse.css">

    <link rel="stylesheet" href="~/css/Gasto.css">
    <link rel="stylesheet" href="~/css/ingresar.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
    <header>
        <nav>
            <a href="@Url.Action("Index", "Home")">Inicio</a>
            <a href="@Url.Action("About", "Home")">Acerca de</a>
            <a href="@Url.Action("Services", "Home")">Servicios</a>
            <a href="@Url.Action("Login", "Account")">Iniciar Sesión</a>
            <a href="@Url.Action("Register", "Account")">Registrarse</a>
            <a href="#contacto">Contacto</a>
        </nav>
        <section class="textoHeader">
            <h1>Admibolsillo</h1>
        </section>
    </header>

    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card">
                <div class="d-flex justify-content-center">
                    <img src="~/img/logoNuevo2.jpg" class="card-img-top img-fluid" alt="Admibolsillo">
                </div>
                <h4 class="d-flex justify-content-center">Registrarse</h4>
                 <form asp-action="Register" method="post">
                {
                    <div class="formreg px-3">
                        <label for="nombre" class="form-label">Nombres</label>
                        <input type="text" name="nombre" class="form-control" minlength="3" required />
                    </div>
                    <div class="formreg px-3">
                        <label for="apellido" class="form-label">Apellidos</label>
                        <input type="text" name="apellido" class="form-control" minlength="4" required />
                    </div>
                    <div class="formreg px-3">
                        <label for="documento" class="form-label">Numero de documento</label>
                        <input type="number" name="documento" class="form-control" min="10000" max="9999999999999" required />
                    </div>
                    <div class="formreg px-3">
                        <label for="edad" class="form-label">Edad</label>
                        <input type="number" name="edad" class="form-control" min="13" required />
                    </div>
                    <div class="formreg px-3">
                        <label for="celular" class="form-label">Celular</label>
                        <input type="number" name="celular" class="form-control" minlength="10" required />
                    </div>
                    <div class="formreg px-3">
                        <label for="correo" class="form-label">Correo</label>
                        <input type="email" name="correo" class="form-control" required />
                    </div>
                    <div class="formreg px-3">
                        <label for="sexo" class="form-label">Sexo</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="sexo" id="sexoFemenino" value="Femenino" required>
                            <label class="form-check-label" for="sexoFemenino">Femenino</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="sexo" id="sexoMasculino" value="Masculino" required>
                            <label class="form-check-label" for="sexoMasculino">Masculino</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="sexo" id="sexoOtro" value="Otro" required>
                            <label class="form-check-label" for="sexoOtro">Otro</label>
                        </div>
                    </div>

                    <div class="formreg px-3">
                        <label for="contrasena" class="form-label">Contraseña</label>
                        <input type="password" name="contrasena" class="form-control" minlength="8" required>
                    </div>

                    <div class="formreg px-3">
                        <button type="submit" class="btn btn-info col-12 mt-4">Registrar</button>
                    </div>
                    <div class="formreg px-3">
                        <button type="reset" class="btn btn-info col-12 mt-2 mb-3">Cancelar</button>
                    </div>

                </form>
                    @if (ViewData["msj"] != null)
                    {

                    }
                }
            </div>
        </div>
    </div>

    <footer class="footer" id="contacto">
        <div class="grupo-1">
            <div class="box">
                <figure>
                    <a href="#">
                        <img src="~/img/logoNuevo2.jpg" alt="Logo Admibolsillo" title="Admibolsillo" width="200px" height="180px">
                    </a>
                </figure>
            </div>
            <div class="box">
                <h2>Gaes 2</h2>
                <p>
                    <br>Karen Briñez
                    <br> Harry Díaz
                    <br> Katherin Gutierrez
                    <br> Julián Ramirez
                    <br> SENA
                    <br> Fase III
                </p>
            </div>
            <div class="box">
                <h2>Siguenos</h2>
                <div class="footerRedes">
                    <a href="#" class="fa fa-facebook"></a>
                    <a href="#" class="fa fa-instagram"></a>
                    <a href="#" class="fa fa-twitter"></a>
                    <a href="#" class="fa fa-youtube"></a>
                </div>
            </div>
        </div>
        <div class="grupo-2">
            <small>&copy; 2024 <b>SLee Dw</b>- Todos los derechos reservados.</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function registrarse() {
            var registro = document.getElementById("btnRegistro").value;
            Swal.fire({
                position: "top-end",
                icon: "success",
                title: "Tu solicitud ha sido registrada",
                showConfirmButton: false,
                timer: 3000,
            });
        }
    </script>

</body>
</html>
