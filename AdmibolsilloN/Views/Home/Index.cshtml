@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = null;
}

<!DOCTYPE html> 
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>::Admibolsillo::</title>
    <link rel="stylesheet" href="~/css/site.css">
    <script src="https://kit.fontawesome.com/4b11e3acfb.js" crossorigin="anonymous"></script>
</head>

<body>
    <header>
        <nav>
            <a asp-controller="Home" asp-action="Index">Inicio</a>
            <a href="#acerca">Acerca de</a>
            <a href="#servicios">Servicios</a>
            <a asp-action="Index" asp-controller="Login">Iniciar Sesión</a>
            <a asp-action="Registro" asp-controller="Login">Registrarse</a>
            <a asp-controller="Error" asp-action="Error404">Contacto</a>
        </nav>

        <section class="textoHeader">
            <h1>Maneja tus finanzas de forma fácil y eficiente</h1>
            <h2>Con nuestros servicios</h2>
        </section>

        <div class="wave" style="height: 150px; overflow: hidden;">
            <svg viewBox="0 0 500 150" preserveAspectRatio="none" style="height: 100%; width: 100%;">
                <path d="M0.00,49.98 C150.00,150.00 349.20,-50.00 500.00,49.98 L500.00,150.00 L0.00,150.00 Z"
                      style="stroke: none; fill: white;"></path>
            </svg>
        </div>
    </header>

    <main>
        <section class="contenedorNosotros" id="acerca">
            <h2 class="titulo">Nuestro producto</h2>
            <div class="contenedorSobreNosotros">
                <img src="~/img/logoNuevo2.jpg" alt="" class="imagenSobreNosotros">
                <div class="contenidoTextos">
                    <h3>¡Bienvenido a Admibolsillo!</h3>
                    <p>
                        La aplicación web diseñada para simplificar tu vida financiera. ¿Quieres tener un control total sobre tus ingresos y gastos?
                        ¿Necesitas crear planes de ahorro efectivos? ¿Buscas consejos prácticos para manejar tus finanzas y reducir gastos innecesarios?
                        ¡Estás en el lugar correcto!
                    </p>
                    <h3>¡Comienza tu camino hacia una vida financiera más saludable!</h3>
                </div>
            </div>
        </section>

        <section class="servicios">
            <div class="contenedor" id="servicios">
                <h2 class="titulo">Nuestros servicios</h2>
                <div class="servicioCont">
                    <div class="servicioIndividual">
                        <img src="~/img/ingresos.jpg" alt="Ingresos y gastos" width="100%" height="100%">
                        <h3>Ingresos y gastos</h3>
                        <p>Lleva el control de tus ingresos y gastos de forma sencilla y organizada</p>
                    </div>
                    <div class="servicioIndividual">
                        <img src="~/img/ahorros.jpg" alt="Ahorro" width="30px" height="150px">
                        <h3>Plan de ahorros</h3>
                        <p>
                            Te ayudamos a cumplir tus proyectos gracias a un plan de ahorro especial para ti que
                            diseñaremos de acuerdo a tus finanzas
                        </p>
                    </div>
                    <div class="servicioIndividual">
                        <img src="~/img/tips.jpg" alt="Tips">
                        <h3>Tips Financieros</h3>
                        <p>
                            Te daremos tips financieros de cómo manejar de forma eficiente y
                            fácil tus finanzas y reducción de tus gastos
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="grupo-1">
            <div class="box">
                <figure>
                    <a href="#">
                        <img src="~/img/logoNuevo2.jpg" alt="Logo Admibolsillo" title="Admibolsillo" width="200px" height="180px">
                    </a>
                </figure>
            </div>
            <div class="box">
                <h2>Gaes 2</h2>
                <p>
                    Karen Briñez<br>
                    Harry Díaz<br>
                    Katherin Gutierrez<br>
                    Julián Ramirez<br>
                    SENA<br>
                    Fase III
                </p>
            </div>

            <div class="box">
                <h2>Síguenos</h2>
                <div class="footerRedes">
                    <a asp-controller="Error" asp-action="Error500" class="fa fa-facebook"></a>
                    <a asp-controller="Error" asp-action="Error500" class="fa fa-instagram"></a>
                    <a href="#" class="fa fa-twitter"></a>
                    <a href="#" class="fa fa-youtube"></a>
                </div>
            </div>
        </div>
        <div class="grupo-2">
            <small>&copy; 2024 <b>SLee Dw</b> - Todos los derechos reservados.</small>
        </div>
    </footer>
</body>

</html>
